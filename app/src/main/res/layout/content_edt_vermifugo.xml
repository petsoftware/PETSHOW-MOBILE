<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.petshow.activity.EdtVermifugoActivity"
    tools:showIn="@layout/activity_edt_vermifugo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edtVermifugo_lblFrequencia"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="@string/lblFrequencia" />

        <Spinner
            android:id="@+id/edtVermifugo_spFrequencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/edtVermifugo_textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/editTextBackground"
        android:paddingTop="15dp"
        android:text="@string/lbl1Dose"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="29dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/edtVermifugo_imgData"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_my_calendar" />

        <EditText
            android:id="@+id/edtVermifugo_txtDt1Dose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

    <Switch
        android:id="@+id/edtVermifugo_swTomou1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.92"
        android:text="@string/lblTomou" />

    <TextView
        android:id="@+id/edtVermifugo_textView32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/editTextBackground"
        android:paddingTop="25dp"
        android:text="@string/lblReforco"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="29dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/edtVermifugo_imgData2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_my_calendar" />

        <EditText
            android:id="@+id/edtVermifugo_txtDt2Dose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>
    <Switch
        android:id="@+id/edtVermifugo_swTomou2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.92"
        android:text="@string/lblTomou" />

    <TextView
        android:id="@+id/edtVermifugo_lblVer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/editTextBackground"
        android:paddingTop="25dp"
        android:text="@string/lblVermeAnterior"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="29dp" />

    <TextView
        android:id="@+id/edtVermifugo_lbl1DoseDt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="1º Dose: 01/05/2015"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/edtVermifugo_lbl2DoseDt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="2º Dose(Reforço): 16/05/2015"
        android:visibility="invisible" />
</LinearLayout>
