<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_edt_usuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.petshow.activity.EdtUsuarioActivity"
    tools:showIn="@layout/activity_edt_usuario"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <ImageView
            android:layout_height="match_parent"
            app:srcCompat="@color/BegieFundoPet"
            android:id="@+id/edtUsuario_imgProfileFacebook"
            android:layout_width="match_parent"
            android:layout_weight="0.4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/edtUsuario_txtNome"
            android:layout_weight="0.2"
            android:textColor="@color/VerdeFundoPet"
            android:textSize="24sp"
            android:layout_marginTop="10dp" />

    </LinearLayout>


    <TextView
        android:text="@string/lblInfEstado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtUsuario_lblEstado"
        android:layout_marginTop="18dp"
        android:textSize="@dimen/NumberMediumTextSize" />

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtUsuario_lblEstadoAtual"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:visibility="gone" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtUsuario_spEstado"
        android:layout_marginTop="@dimen/DistanciaEntreCamposM"
        android:visibility="gone"/>
    <TextView
        android:text="@string/lblinfCidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtUsuario_lblCidade"
        android:layout_marginTop="@dimen/DistanciaEntreCamposM"
        android:textSize="@dimen/NumberMediumTextSize" />
    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtUsuario_lblCidadeAtual"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:visibility="gone"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtUsuario_spCidade"
        android:layout_marginTop="@dimen/DistanciaEntreCamposM"
        android:visibility="gone"/>
    <TextView
        android:text="@string/lblInfBairro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtUsuario_lblBairro"
        android:layout_marginTop="@dimen/DistanciaEntreCamposM"
        android:textSize="@dimen/NumberMediumTextSize" />
    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtUsuario_lblBairroAtual"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:visibility="gone"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtUsuario_spBairro"
        android:layout_marginTop="@dimen/DistanciaEntreCamposM"
        android:visibility="gone"/>
    <TextView
        android:text="@string/lblInfTelefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtUsuario_lblTelefone"
        android:layout_marginTop="@dimen/DistanciaEntreCamposM"
        android:textSize="@dimen/NumberMediumTextSize" />

    <br.com.petshow.view.util.PhoneEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edtUsuario_txtTelefone" />


</LinearLayout>
